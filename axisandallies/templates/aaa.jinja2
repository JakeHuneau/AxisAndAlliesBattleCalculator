      <tr>
        <th>Unit</th>
        <th>Attackers</th>
        <th>Defenders</th>
      </tr>

      <tr>
        <td>Infantry</td>
        <td>
            <input type="text" name="a_inf" title="a_inf" value={% if a_inf is defined %}{{ a_inf }}{% else %}"0"{% endif %} />
        </td>
        <td>
            <input type="text" name="d_inf" title="d_inf" value={% if d_inf is defined %}{{ a_inf }}{% else %}"0"{% endif %} />
        </td>
      </tr>

      <tr>
        <td>Artillery</td>
